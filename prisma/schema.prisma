generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
}

model Usuario {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  clientes Cliente[]
}

model Cliente {
  id        Int      @id @default(autoincrement())
  nombre    String
  telefono  String?
  direccion String?
  usuarioId Int
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  
  // Si borras el cliente, se borran sus préstamos (Cascade)
  prestamos Prestamo[] 
  createdAt DateTime @default(now())
}

model Prestamo {
  id                Int      @id @default(autoincrement())
  clienteId         Int
  montoCapital      Decimal
  interesPorcentaje Decimal
  plazo             Int
  frecuencia        String
  estado            String   @default("ACTIVO")
  fechaInicio       DateTime
  moraDiaria        Decimal  @default(0)
  createdAt         DateTime @default(now())

  // RELACIÓN CORREGIDA (Solo debe haber una línea aquí)
  cliente Cliente @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  
  cuotas  Cuota[]
  pagos   Pago[]
  notas   Nota[]
}

model Cuota {
  id               Int      @id @default(autoincrement())
  prestamoId       Int
  numero           Int
  fechaVencimiento DateTime
  montoEsperado    Decimal
  montoPagado      Decimal  @default(0)
  estado           String   @default("PENDIENTE")

  // RELACIÓN CORREGIDA
  prestamo Prestamo @relation(fields: [prestamoId], references: [id], onDelete: Cascade)
}

model Pago {
  id         Int      @id @default(autoincrement())
  prestamoId Int
  monto      Decimal
  fecha      DateTime @default(now())
  tipo       String
  nota       String?

  // RELACIÓN CORREGIDA
  prestamo Prestamo @relation(fields: [prestamoId], references: [id], onDelete: Cascade)
}

model Nota {
  id         Int      @id @default(autoincrement())
  prestamoId Int
  texto      String
  fecha      DateTime @default(now())

  // RELACIÓN CORREGIDA
  prestamo   Prestamo @relation(fields: [prestamoId], references: [id], onDelete: Cascade)
}